<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:Quicker.Utilities.UI.Behaviors;assembly=Quicker"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:view_mouse="clr-namespace:Quicker.View.Mouse;assembly=Quicker">
    <Style TargetType="{x:Type view_mouse:GesturePreviewControl}">
        <Setter Property="behaviors:RegisterHWndBehavior.IsEnabled" Value="True" />
        <Setter Property="hc:WindowAttach.IsDragElement" Value="True" />
    </Style>
</ResourceDictionary>