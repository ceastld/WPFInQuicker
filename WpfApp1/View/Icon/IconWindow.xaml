<qk:FadeOutWindow
    x:Class="WpfApp1.View.Icon.IconWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:WpfApp1.View.Icon"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:qk="https://getquicker.net"
    Title="IconWindow"
    hc:WindowAttach.IsDragElement="True"
    AllowsTransparency="True"
    Background="Transparent"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border Margin="10" Effect="{StaticResource EffectShadow3}">
        <qk:IconControl
            Width="{Binding [iconSize]}"
            Height="{Binding [iconSize]}"
            Icon="{Binding [icon]}" />
    </Border>
</qk:FadeOutWindow>
