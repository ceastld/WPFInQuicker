<Window
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="clr-namespace:FontAwesome5.WPF;assembly=FontAwesomeIconsWpf"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:qk="https://getquicker.net"
    xmlns:ui="clr-namespace:Quicker.Utilities.UI;assembly=Quicker"
    Title="MainWindow"
    Width="400"
    Height="450"
    Topmost="True"
    mc:Ignorable="d">
    <Window.Resources />
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo>
            <TaskbarItemInfo.ThumbButtonInfos>
                <ThumbButtonInfoCollection>
                    <ThumbButtonInfo CommandTarget="{Binding ElementName=btnTest}" ImageSource="{StaticResource test}" />
                </ThumbButtonInfoCollection>
            </TaskbarItemInfo.ThumbButtonInfos>
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>
    <Grid>
        <TabControl TabStripPlacement="Bottom" Margin="10">
            <TabItem Header="变量组1"></TabItem>
            <TabItem Header="变量组2"></TabItem>
            <TabItem Header="变量组3"></TabItem>
        </TabControl>
        <StackPanel>
            <Button x:Name="btnTest" Click="btnTest_Click">
                <fa:SvgAwesome Foreground="#09DE09" Icon="Light_Question" />
            </Button>
            <!--<TextBlock>动作编辑器</TextBlock>
            <qk:QuickActionEditor></qk:QuickActionEditor>
            <TextBlock>动作按钮</TextBlock>
            <qk:ActionButton Icon="https://files.getquicker.net/_icons/002098E8563D3F0D68BEC42AC4956CE56DD78B57.svg">
            </qk:ActionButton>
            <TextBlock>动作选择器</TextBlock>
            <qk:ActionSelector></qk:ActionSelector>
            <TextBlock></TextBlock>
            <qk:ActionUIEditor></qk:ActionUIEditor>
            <qk:CircleActionMenu></qk:CircleActionMenu>-->
            <qk:IconControl Height="40" Icon="https://files.getquicker.net/_icons/002098E8563D3F0D68BEC42AC4956CE56DD78B57.svg" />
            <!--<qk:ScreenColorPickerControl></qk:ScreenColorPickerControl>-->
            <!--<qk:SearchBoxControl></qk:SearchBoxControl>-->
            <Slider
                Maximum="100"
                Minimum="0"
                Value="20" />
        </StackPanel>
    </Grid>
</Window>
